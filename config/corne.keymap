#include <locale/keys_de.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | SHFT |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  Ö  |  Ä   |
            // | CTRL |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  -  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB    &kp DE_Q  &kp DE_W   &kp DE_E    &kp DE_R    &kp DE_T        &kp DE_Y    &kp DE_U    &kp DE_I      &kp DE_O    &kp DE_P          &kp BSPC
&kp LSHFT  &kp DE_A  &kp DE_S   &kp DE_D    &kp DE_F    &kp DE_G        &kp DE_H    &kp DE_J    &kp DE_K      &kp DE_L    &kp DE_O_UMLAUT   &kp DE_A_UMLAUT
&kp LCTRL  &kp DE_Z  &kp DE_X   &kp DE_C    &kp DE_V    &kp DE_B        &kp DE_N    &kp DE_M    &kp DE_COMMA  &kp DE_DOT  &kp DE_MINUS      &kp ESC
                                &kp LGUI    &mo 1       &kp DE_SPACE    &kp RET     &mo 2       &kp RALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // | TAB    | BT1 | BT2 |     |     |     |   | LFT | DWN |  UP | RGT |     |   Ü   |
            // | BTCLR  |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |   ß   |
            // | SHFT   |  >  |     |     |     |     |   |     |     |     |     |     |       |
            //                      | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp TAB     &bt BT_SEL 0    &bt BT_SEL 1    &trans      &trans      &trans          &kp LEFT    &kp DOWN    &kp UP      &kp RIGHT   &trans      &DE_U_UMLAUT
&bt BT_CLR  &kp DE_N1       &kp DE_N2       &kp DE_N3   &kp DE_N4   &kp DE_N5       &kp DE_N6   &kp DE_N7   &kp DE_N8   &kp DE_N9   &kp DE_N0   &kp DE_SZ
&kp LSHFT   &kp DE_GT       &trans          &trans      &trans      &trans          &trans      &trans      &trans      &trans      &trans      &trans
                                            &kp LGUI    &trans      &kp SPACE       &kp RET     &trans      &kp RALT
            >;
        };
    };
};